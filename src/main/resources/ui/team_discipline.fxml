<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane xmlns="http://javafx.com/javafx/25"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="ui.TeamDisciplineController">

    <children>
        <TableView fx:id="disciplineTable"
                   AnchorPane.topAnchor="0.0"
                   AnchorPane.bottomAnchor="0.0"
                   AnchorPane.leftAnchor="0.0"
                   AnchorPane.rightAnchor="0.0">
            <placeholder>
                <Label text="Nav datu — ielādē JSON failus."/>
            </placeholder>
            <columns>
                <TableColumn fx:id="colRank" text="Vieta"/>
                <TableColumn fx:id="colTeam" text="Komanda"/>
                <TableColumn fx:id="colY" text="Y"/>
                <TableColumn fx:id="colR" text="R"/>
                <TableColumn fx:id="colTotal" text="Kopā"/>
            </columns>
        </TableView>
    </children>
</AnchorPane>
