<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ui.MainController">

    <center>
        <TabPane BorderPane.alignment="CENTER">
            <tabs>
                <Tab text="JSON">
                    <content>
                        <AnchorPane prefHeight="402.0" prefWidth="757.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                            <children>
                                <TextArea fx:id="JSONLogArea" editable="false" layoutX="359.0" layoutY="20.0" prefHeight="318.0" prefWidth="281.0" AnchorPane.bottomAnchor="63.19999999999999" AnchorPane.leftAnchor="359.19999999999993" AnchorPane.rightAnchor="161.0" AnchorPane.topAnchor="20.0" />

                                                  <Button fx:id="loadJsonButton" layoutX="24.0" layoutY="201.0" onAction="#loadJSON" text="Ielādēt" />

                                                  <Button fx:id="clearJSONButton" layoutX="24.0" layoutY="249.0" onAction="#clearJSON" text="Izdzēst" />

                                                              <Button fx:id="chooseJSONButton" layoutX="24.0" layoutY="92.0" onAction="#onChooseJSONFolder" text="Izvēlēties failus" />
                                <TextField fx:id="JSONPathTextField" layoutX="24.0" layoutY="44.0" prefHeight="26.0" prefWidth="154.0" promptText="Ceļš uz folderi ar JSON" />
                            </children>
                        </AnchorPane>
                    </content>
                </Tab>

                <Tab text="Turnīra tabula" onSelectionChanged="#onTournamentTabSelected">
                    <content>
                        <fx:include fx:id="tournamentTab" source="tournament_table.fxml" />
                    </content>
                </Tab>

                <Tab text="TOP 10 spēlētāji" onSelectionChanged="#onPlayerGoalsTabSelected">
                    <content>
                        <fx:include fx:id="topPlayersTab" source="top_player_goals.fxml" />
                    </content>
                </Tab>
            </tabs>
        </TabPane>
    </center>
</BorderPane>
